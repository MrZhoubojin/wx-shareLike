    <text class="plain">No.</text>
    <text class="index">{{ _index }}</text>
    <view class="line"></view>
  </view>
  <view class="date-container">
    <text class="month">{{ _month }}</text>
    <text class="year">{{ _year }}</text>
  </view>
</view>